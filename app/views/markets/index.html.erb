<h1>Markets</h1>
<div class = "markets_table">
  <table style="border:1px solid black;" id="m_table">
    <tr>
      <th style="border: 1px solid black">Name</th>
      <th style="border: 1px solid black">City</th>
      <th style="border: 1px solid black">State</th>
      <th style="border: 1px solid black">Find More Info</th>
    </tr>
    <% @facade.each do |market| %>
    <tr>
      <td style="border: 1px solid black"><%= market.name %></td>
      <td style="border: 1px solid black"><%= market.city %></td>
      <td style="border: 1px solid black"><%= market.state %></td>
      <td style="border: 1px solid black"><%= button_to "More Info", market_path(market.id), method: :get%></td>
    </tr>
    <% end %>
    </table>